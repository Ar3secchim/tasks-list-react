{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:jsx-fragments/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
      "jsx-fragments"
    ],
    "rules": {
      "jsx-fragments/react-in-fragment-scope": false,
      "jsx-fragments/fragment-uses-react": "error"
    }
}
